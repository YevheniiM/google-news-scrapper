    "maxItems": {
      "title": "Maximum Articles",
      "type": "integer",
      "description": "Maximum number of articles to scrape (0 = unlimited, limited by Google's RSS feed capacity ~100-200 articles)",
      "default": 0,
      "minimum": 0,
      "maximum": 10000,
      "example": 100,
      "editor": "number"
    },
    "dateFrom": {
      "title": "Date From",
      "type": "string",
      "description": "Start date for articles (YYYY-MM-DD format). If not specified, will use articles from the last 30 days.",
      "example": "2024-01-01",
      "editor": "datepicker"
    },
    "dateTo": {
      "title": "Date To",
      "type": "string",
      "description": "End date for articles (YYYY-MM-DD format). If not specified, will use today's date.",
      "example": "2024-12-31",
      "editor": "datepicker"
    },
    "useBrowser": {
      "title": "Use Browser Mode",
      "type": "boolean",
      "description": "Use Playwright browser for JavaScript-rendered pages (slower but handles complex sites). Automatically enabled for Google News URLs.",
      "default": false,
      "example": false,
      "editor": "checkbox"
    }
  },
  "required": ["query"],
  "additionalProperties": false
}
