# Google News Scraper - Environment Configuration
# Copy this file to .env and configure your local development settings

# Development Mode
NODE_ENV=development
DEBUG=true

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/scraper.log

# Local Storage Configuration
LOCAL_STORAGE_DIR=./storage
ENABLE_LOCAL_STORAGE=true

# Development Server Configuration
DEV_SERVER_PORT=3000
DEV_SERVER_HOST=localhost

# Mock Data Configuration
USE_MOCK_DATA=false
MOCK_DATA_DIR=./dev/mock-data

# Testing Configuration
TEST_MODE=false
TEST_DATA_DIR=./dev/test-data
ENABLE_TEST_LOGGING=true

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_INTERVAL=30000

# Error Handling Configuration
ENABLE_ERROR_RECOVERY=true
SAVE_ERROR_LOGS=true
ERROR_LOG_DIR=./logs/errors

# Browser Configuration (for local testing)
BROWSER_HEADLESS=false
BROWSER_DEVTOOLS=true
BROWSER_SLOW_MO=100

# Proxy Configuration (optional)
# HTTP_PROXY=http://localhost:8080
# HTTPS_PROXY=http://localhost:8080

# Rate Limiting (for development)
ENABLE_RATE_LIMITING=false
DEV_REQUEST_DELAY=1000

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600000
CACHE_DIR=./cache

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_UI=true
ENABLE_METRICS_DASHBOARD=true

# Local Database (for development persistence)
LOCAL_DB_PATH=./dev/database.json
ENABLE_LOCAL_DB=true

# API Keys (for external services - optional)
# GOOGLE_API_KEY=your_google_api_key_here
# PROXY_API_KEY=your_proxy_service_key_here

# Development Notifications
ENABLE_DESKTOP_NOTIFICATIONS=true
NOTIFICATION_LEVEL=INFO

# Memory and Performance Limits
MAX_MEMORY_USAGE=512
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30000

# Development Security
DISABLE_SSL_VERIFICATION=false
ALLOW_INSECURE_CONNECTIONS=false
