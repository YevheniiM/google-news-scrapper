        "TT", "GY", "SR", "FK", "BR", "AR", "UY", "PY", "BO", "PE", "EC", "CO",
        "VE", "GF", "RU", "UA", "BY", "MD", "GE", "AM", "AZ", "KZ", "KG", "TJ",
        "TM", "UZ", "MN"
      ]
    },
    "language": {
      "title": "Language",
      "type": "string",
      "description": "Language code for the news content",
      "default": "en-US",
      "example": "en-US",
      "editor": "select",
      "enum": [
        "en-US", "en-GB", "en-CA", "en-AU", "de-DE", "fr-FR", "it-IT", "es-ES",
        "nl-NL", "pt-PT", "pt-BR", "ru-RU", "ja-JP", "ko-KR", "zh-CN", "zh-TW",
